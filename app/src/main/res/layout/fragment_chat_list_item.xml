<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView android:layout_width="100dp" android:layout_height="100dp"
        android:id="@+id/fragment_chat_list_item_photo_imageview"/>




    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/fragment_chat_list_item_name_textview"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/fragment_chat_list_item_textview"
            android:layout_weight="1"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>