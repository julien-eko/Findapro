<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.PlanningActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_planning_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:subtitleTextColor="@android:color/black"
        android:theme="@style/ToolBarStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/activity_planning_list_no_item"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/no_assignment_planned"/>
    <!-- RECYCLER VIEW -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_planning_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>