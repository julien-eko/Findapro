<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.AssignmentsChoiceActivity">

    <TextView
        android:id="@+id/assignments_choice_activity_describe_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/assignments_choice_activity_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepter"/>

    <Button
        android:id="@+id/assignments_choice_activity_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refuser"/>


</LinearLayout>